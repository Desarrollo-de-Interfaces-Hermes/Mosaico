<Window x:Class="Mosaico.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mosaico"
        mc:Ignorable="d"
        Title="Mosaico" Height="600" Width="700" MinHeight="400" MinWidth="400" Icon="imgs/32.ico">

    <DockPanel LastChildFill="True">
        <TextBlock Padding="30" Background="Violet" DockPanel.Dock="Top"></TextBlock>
        <TextBlock Padding="40" Background="Violet" DockPanel.Dock="Left"></TextBlock>
        <TextBlock Padding="30" Background="Green" DockPanel.Dock="Bottom"></TextBlock>
        <TextBlock Padding="40" Background="Green" DockPanel.Dock="Right"></TextBlock>
        <TextBlock Padding="40" Background="Red" DockPanel.Dock="Left"></TextBlock>
        <TextBlock Padding="20" Background="Red" DockPanel.Dock="Bottom"></TextBlock>
        <TextBlock Padding="40" Background="RosyBrown" DockPanel.Dock="Right"></TextBlock>
        <TextBlock Padding="20" Background="RosyBrown" DockPanel.Dock="Top"></TextBlock>
        <TextBlock Background="Black"></TextBlock>
    </DockPanel>
    
</Window>
